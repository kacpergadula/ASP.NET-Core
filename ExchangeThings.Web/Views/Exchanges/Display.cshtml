@model ExchangesModel

<div id="success-alert" class="alert alert-success" style="display: none">Item added successfully</div>

<form method="POST" id="form">
    <div class="form-group">
        <label asp-for="Name">Item name</label>
        <input id="name" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input id="description" asp-for="Description" class="form-control" />
    </div>

    <div class="form-check">
        <input id="isvisible" asp-for="IsVisible" class="form-check-input" />
        <label asp-for="IsVisible" class="form-check-label">Item visible?</label>
    </div>

    <div class="form-group">
        <input id="button" type="submit" value="Add new item" />
    </div>

</form>

@section Scripts {
    <script src="~/js/addNewItem.js"></script>
}