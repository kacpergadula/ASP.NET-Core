@model ExchangesModel

<h1>Company menagement</h1>

<h2>Add new company</h2>

<p>....</p>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name, "Exchange name")
        @Html.TextAreaFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Description, "Exchange description")
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    </div>
    <div class="form-group form-check">
        @Html.CheckBoxFor(x => x.IsVisible, new { @class = "form-check-input" })
        @Html.LabelFor(x => x.IsVisible, "Visible?", new { @class = "form-check-label" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Company</button>
    </div>
}